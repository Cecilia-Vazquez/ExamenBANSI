

@{
    ViewBag.Title = "AgregarExamen";
    Layout = null;
}

<div class="container">

    @using (Html.BeginForm("AgregarExamen", "Home", FormMethod.Post))
    {
        <br />
        <h3>Agregar Examen</h3>

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="nombre">Nombre:</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="nombre" placeholder="" required>
                </div>


            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="nombre">Descripcion:</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="descripcion" placeholder="" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="nombre">Selecciona el metodo:</label>
                <div class="col-md-10">
                    <select class="form-control" name="metodo">
                        <option value="API">API</option>
                        <option value="PROCEDURE">PROCEDURE</option>

                    </select>
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    <input type="submit" value="Agregar" class="btn btn-success btn-lg" />
                </div>
            </div>





        </div>
    }


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
